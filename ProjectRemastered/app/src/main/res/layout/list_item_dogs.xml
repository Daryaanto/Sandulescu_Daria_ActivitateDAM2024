<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nume:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/numeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pufi"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rasaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rasa:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/rasaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bichon" />

        <TextView
            android:id="@+id/varstaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varsta:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/varstaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 ani" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kgLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greutate:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/kgData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 kg" />

        <TextView
            android:id="@+id/adoptabilLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adoptabil?"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/adoptabilData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da" />

    </LinearLayout>
</LinearLayout>